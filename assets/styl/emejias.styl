@import "nib"

vendor-prefixes = webkit o ms moz official

alizarin 	= #e74c3c;
clouds 		= #ecf0f1;
wet 		= #34495e;
asbestos 	= #7f8c8d;
.u-font-size
	font-size 2em !important
.bgc-comments
	background-color: #2c3e50
.text-cloud
	color clouds
.text-wet
	color wet
.roboto-lighter
	font-family 'Roboto', sans-serif;
	font-weight: lighter
.roboto-medium
	font-family 'Roboto', sans-serif;
	font-weight: medium

.MainNav
	background-color rgba(black .3)
	position fixed
	z-index 9999
	left 0
	right 0
.MainNav-list
	list-style none
	padding-top 1em
.MainNav-item
	margin-right .5em
	display inline
	margin-bottom .4em
.MainNav-link
	font-family 'Roboto', sans-serif;
	font-weight: 300
	font-size 16px
	color clouds
	padding-bottom .4em
	text-decoration none
	border 2px solid transparent
	padding .2em
	&:hover
	&:active
	&:focus
		border 2px solid alizarin
		color alizarin
		text-decoration none
.MainNav-link-current
	border 2px solid alizarin
	text-decoration none			
.MainNav-down
	background-color rgba(black .7) !important
.Header
	background-image url('../images/OCNVR403.jpg')
	background-position 100%
	background-repeat no-repeat
	background-size cover !important
	background-position top
	padding-top 5em
.Header-title
	font-size 2em
	font-family 'Roboto', sans-serif;
	font-weight 500
.Header-contact
	background-color rgba(black .3)
	border-radius 5px 
	padding-top 1em
	margin-top 1.5em
.portfolio
	background-color clouds
	padding-bottom 1em
.portfolio-item
	margin-bottom 1em
.portfolio-title
	border-top 1px solid asbestos
	border-left 1px solid asbestos
	border-right 1px solid asbestos
	margin 0
	padding .3em
	background-color: #F5F5F5
	border-radius 5px 5px 0 0
.thumbnail
	border none
.Footer
	background-color: wet
	position relative
.FooterNav
	list-style none
	margin 1em 0
	padding 0
.FooterNav-item
	margin-bottom .5em
.FooterNav-link
	font-family 'Roboto', sans-serif;
	font-weight lighter
	color clouds
	font-size 1.5em
	>span
		//padding-right .5em
		width: 50px
	&:hover
		color alizarin
		text-decoration none
.Footer-form
	margin-bottom 1.5em
.map
	width 100%
	height 400px
	color wet
	font-weight 
	margin-top 2em
@media screen and (min-width:750px)
	.FooterNav
		border-left 2px solid alizarin
		padding-left 1em
	
@media screen and (min-width:970px)
	.MainNav
		background-color transparent
	.Header
		padding-top 4em
	.Header-contact
		margin-bottom 1em
	.map
		height 361px
@media screen and (min-width:970px)
	.map
		height 333px


 
		 
		
	



